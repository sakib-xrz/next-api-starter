generator client {
  provider = "prisma-client"
  output   = "../generated/prisma"
}

datasource db {
  provider = "postgresql"
}

enum Role {
  USER
  ADMIN
}

// Define your database models here
model User {
  id         String   @id @default(uuid())
  email      String   @unique
  password   String
  name       String
  photo_url  String?
  role       Role     @default(USER)
  created_at DateTime @default(now())
  updated_at DateTime @updatedAt
}
